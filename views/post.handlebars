<h1 id="dashboard-header">{{user.username}}'s Posts:</h1>

<section class = "post">
    <div class = "container justify-content-center">
        <div class="col-12">
            {{#each dashboardPosts as |post|}}
                <div class="card">
                      <div class="card-header"> <a id="post-link" href = "post/{{id}}">{{title}}</a></div>
                    <div class="card-body">
                        <h5 class="card-title">Posted By: {{user.username}} {{format_date created_at}} {{format_time created_at}}</h5>
                        <p class="card-text">{{content}}</p>
                    </div>
                </div>
            {{/each}}
        </div>
    </div>
<section>

<div class="form-group">
    <button id="newpost-btn" class="btn btn-primary" type = "submit"><a id= "newpost-link" href="/newpost">New Post</a></button>
</div>


{{#if loggedIn}}
<div class="card">
    <h3 class="card-header"></h3>
    <form class="card-body comment-form" id="comment-form">

        <label class="form-label">Comment</label>
        <input id="comment" name="comment-body" class="form-input" />

        <button type="submit" class="btn">Submit</button>
    </form>
</div>
{{/if}}

{{> comments post.comments}}

{{#if loggedIn}}
<script src="/javascript/post.js"></script>
{{/if}}
