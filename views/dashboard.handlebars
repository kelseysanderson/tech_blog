<h1 id="dashboard-header">{{user.username}}'s Posts:</h1>

<div class="form-group">
    <button id= "submit-btn" class="btn btn-primary" type="submit"><a id= "newpost-link" href="/newpost">+ add post</a></button>
</div>

<section class = "post">
    <div class = "container justify-content-center">
        <div class="col-12">
            {{#each dashboardPosts as |post|}}
                <div class="card">
                      <div class="card-header"> <a id="post-link" href = "post/{{id}}">{{title}}</a></div>
                    <div class="card-body">
                        <h5 class="card-title">Posted By: {{user.username}} {{format_date created_at}} {{format_time created_at}}</h5>
                        <p class="card-text">{{content}}</p>
                    </div>
                </div>
            {{/each}}
        </div>
    </div>
<section>

